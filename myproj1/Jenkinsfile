pipeline {
    agent any

    stages{
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                bat 'docker build -t myfirstimage myproj1\\my-app\\'
            }
        }

        stage('Deploy K8s cluster') {
            steps {
                bat 'kubectl apply -f myprog1\\k8s\\'
            }
        }
    }
}