pipeline {
    agent any
    environment {
    KUBECONFIG = "C:\\Users\\omsa3\\.kube\\config"
    }

    stages{
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                bat 'docker build -t myfirstimage .\\myproj1'
            }
        }

        stage('Deploy K8s cluster') {
            steps {
                bat 'kubectl apply -f .\\myproj1\\K8s\\'
            }
        }
    }
}