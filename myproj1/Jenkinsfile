pipeline {
    agent any

    stages{
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Test') {
            steps {
                bat 'python -m venv venv'
                bat 'venv\\Scripts\\pip install --upgrade pip'
                bat 'venv\\Scripts\\pip install pytest'
            }
        }

        stage('Build') {
            steps {
                bat 'docker build -t myfirstimage .\\my-app'
            }
        }

        stage('Deploy K8s cluster') {
            steps {
                bat 'kubectl apply -f .\\k8s\\'
            }
        }
    }
}